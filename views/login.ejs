<div class='container'>
    <div class='jumbotron matchy-jumbo'>
        <div class='row'>
            <div class='col-8'>
                <p>Don't have an account? <a href="/users/signup">Sign Up</a></p>
            </div>
        </div>

        <div class="col-sm-6 col-sm-offset-3">

            <% if(message.length > 0) { %>
                <div class='alert alert-danger'><%= message %></div>
            <% } %>

            <h1>Login</h1>

            <form action="/users/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-info btn-lg">Login</button>
            </form>

            <hr>

            <!-- <h2>Or Login With <a href="/auth/facebook" class="btn btn-primary btn-lg">Facebook</a></h2> -->

        </div>
        <div class='row'>
            <div class='col-4'>
            </div>
            <div class='col-4 login-home'>
                    <a class="btn btn-light" href="/" role="button">Home</a>
            </div>
            <div class='col-4'>
            </div>
        </div>
    </div>
</div>
